{
  "manifest_version": 2,
  "version": "0.0.1",
  "name": "module wand",
  "description": "get random module from ModularGrid",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [ "*://*.modulargrid.net/e/*" ],
      "css": ["style/style.css"],
      "js": [
        "scripts/requests.js",
        "scripts/scrape.js",
        "scripts/viewHelpers.js",
        "scripts/embedded.js"
      ]
    }
  ]
}
